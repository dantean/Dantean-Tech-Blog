<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>
    <div class="card p-4">
      <form class="form new-post-form">
        <div class="form-group mb-3">
          <label for="post-title">Post Title:</label>
          <input class="form-control" type="text" id="post-title" name="post-title" />
        </div>
        <div class="form-group mb-3">
          <label for="post-contents">Contents:</label>
          <textarea class="form-control" id="post-contents" name="post-contents"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>
    <div class="card p-4">
      {{#each posts as |post|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/post/{{post.id}}" class="text-decoration-none">{{post.title}}</a></h4>
        </div>
        <div class="col-md-4 text-end">
          <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
